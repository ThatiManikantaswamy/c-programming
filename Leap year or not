#include<stdio.h>
int main(){
	int year;
	printf("enter the year:");
	scanf("%d",&year);
	if(year%400==0)
	printf("it is an leap year");
	else if(year%100==0)
	printf("it is not an leap year");
	else if(year%4==0)
	printf("it is an leap year");
	else
	printf("it is an not an leap year");
	return 0;
}

OUTPUT :
enter the year:2024
it is an leap year
