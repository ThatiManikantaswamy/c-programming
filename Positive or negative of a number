#include<stdio.h>
int main(){
	int n;
	printf("enter the number:");
	scanf("%d",&n);
	if(n>0)
	printf("it is an positive number");
	else if(n<0)
	printf("it is an negative number");
	else if(n==0)
	printf("it is equal to zero");
	else
	printf("it is not a number");
	return 0;
}

OUTPUT :
enter the number:23
it is an positive number
